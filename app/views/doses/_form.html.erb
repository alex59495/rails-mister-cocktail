<div class="container mt-2">
    <%= simple_form_for [@cocktail, @dose] do |f| %>
    <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= f.association :ingredient %>
    </div>
        <%= f.submit "Submit", class:"btn-yellow-full" %>
    <% end %>
</div>