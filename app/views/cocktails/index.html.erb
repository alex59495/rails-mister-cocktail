<div class="container">
    <div class="title-cocktails">The cocktails</div>
    <div class="row">
        <% @cocktails.each do |cocktail| %>
        <div class="col-4">
            <div class="card-cocktail my-2" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://images.unsplash.com/photo-1536935338788-846bb9981813?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1886&q=80')">
                <p><%= link_to cocktail.name, cocktail_path(cocktail) %></p>
            </div>
        </div>
        <% end %>
    </div>
</div>
