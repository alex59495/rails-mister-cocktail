<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @cocktail.cocktail_image.key %>')">
<h1><%= @cocktail.name %></h1>
<div class="container">
  <div class="row container-banner">
    <div class="card-cocktail-element col-6">
      <h2>Description</h2>
      <p>Apprenez à réaliser un cocktail <b><%= @cocktail.name %></b> en toute simplicité</p>
    </div>
    <div class="card-ingredient col-5 offset-1">
      <h3>Ingrédients</h3>
      <% @cocktail.doses.each do |dose| %>
        <div class="d-flex align-items-center">
            <div class="ingredient">
                <%= dose.ingredient.name %> -
            </div>
            <div class="dose ml-2">
                <%= dose.description %>
            </div>
            <div class="btn-remove-ingredient ml-2 mb-1">
                <%= link_to icon_trash("trash"), dose_path(dose), method: :delete, data: { confirm: "are you sure ?"} %></p>
            </div>
        </div>
      <% end %>
    </div>
      <div class="col-md-6 my-3 card-cocktail-element">
          <h3>Review</h3>
          <div class="review">
          <% @cocktail.reviews.each do |review| %>
          <div class="d-flex">
              <%= review.rate.times do |star| %>
                  <%= "⭐" %>
              <% end %>
              <%= review.content %>
          </div>
          <% end %>
          </div>
          <%= render 'reviews/form', cocktail: @cocktail %>
      </div>
      <div class="col-md-5 my-3 offset-1 card-cocktail-element">
          <h3>Add a new dose</h3>
          <%= render 'doses/form', cocktail: @cocktail %>
      </div>
    </div>
  </div>
</div>
