<div class="container mt-2">
    <%= simple_form_for @cocktail do |f| %>
    <div class="form-group">
        <%= f.label :name%>
        <%= f.text_field :name, class: "form-control"%>
    </div>
    <div class="form-group">
        <%= f.label :cocktail_image %>
        <%= f.file_field :cocktail_image %>
    </div>
        <%= f.submit "Create", class:"btn-yellow-full" %>
    <% end %>
</div>